module Vfu (
  input              cmd_valid,
  output             cmd_ready,
  input     [31:0]   cmd_payload_instruction,
  input     [31:0]   cmd_payload_inputs_0,
  input     [31:0]   cmd_payload_inputs_1,
  input     [2:0]    cmd_payload_rounding,
  output             rsp_valid,
  input              rsp_ready,
  output      [31:0] rsp_payload_output,

  input              reset,
  input              clk
);

  // reg out_vld;
  // reg out_rdy;
  // // Trivial handshaking for a combinational CFU
  // always @(posedge clk) begin
  //   out_vld <= cmd_valid;
  //   out_rdy <= rsp_ready;
  // end

  assign rsp_valid = 1;//cmd_valid;
  assign cmd_ready = 1;//rsp_ready;

  //
  // select output -- note that we're not fully decoding the 3 function_id bits
  //
  assign rsp_payload_output = cmd_payload_instruction[0] ? cmd_payload_inputs_1 : cmd_payload_inputs_0 ;


endmodule
